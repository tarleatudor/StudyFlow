generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Activity {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  code        String     @unique
  duration    Int
  teacherId   Int
  scheduledDate   DateTime   @default(now())
  createdAt   DateTime   @default(now())
  feedbacks   Feedback[]
}

model Feedback {
  id         Int      @id @default(autoincrement())
  emojiType  String
  timestamp  DateTime @default(now())
  activityId Int
  activity   Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)
}

model Teacher {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  name String
}